<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://www.example.org/customer" xmlns="http://www.example.org/customer"
	elementFormDefault="qualified">

	<xs:element name="customer">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="billing-address" />
				<xs:element ref="shipping-address" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:complexType name="address-type">
		<xs:sequence>
			<xs:element name="street" type="xs:string" />
		</xs:sequence>
	</xs:complexType>

	<xs:element name="billing-address" type="address-type" />

	<xs:element name="shipping-address" type="address-type" />

</xs:schema>